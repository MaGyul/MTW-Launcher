{
	"name": "mtw-launcher",
	"version": "2.4.7",
	"private": false,
	"description": "MTW Launcher",
	"main": "src/electron.cjs",
	"type": "module",
	"author": "MaGyul",
	"scripts": {
		"dev": "cross-env NODE_ENV=dev yarn run dev:all",
		"dev:all": "concurrently -n=svelte,electron -c='#ff3e00',blue \"yarn run dev:svelte\" \"yarn run dev:electron\"",
		"dev:svelte": "vite dev",
		"dev:electron": "electron src/electron.cjs",
		"build": "cross-env NODE_ENV=production yarn run build:svelte && yarn run build:electron && yarn run build:appx",
		"build:publish": "cross-env NODE_ENV=production yarn run build:svelte && yarn run publish && yarn run build:appx",
		"build:svelte": "vite build",
		"build:electron": "electron-builder -w --config build.config.json",
		"build:macos": "electron-builder -m --config build.config.json",
		"build:appx": "node appx.cjs",
		"publish": "cross-env GH_TOKEN=token electron-builder --publish always -w --config build.config.json"
	},
	"engines": {
		"npm": ">=7"
	},
	"dependencies": {
		"adm-zip": "^0.5.12",
		"child_process": "^1.0.2",
		"custom-electron-titlebar": "^4.2.8",
		"electron-context-menu": "^3.6.1",
		"electron-reloader": "^1.2.3",
		"electron-serve": "^1.1.0",
		"electron-squirrel-startup": "^1.0.0",
		"electron-updater": "^5.3.0",
		"electron-window-state": "^5.0.3",
		"fs-extra": "^11.2.0",
		"helios-core": "^2.2.1",
		"helios-distribution-types": "^1.3.0",
		"lodash.merge": "^4.6.2",
		"moment": "^2.30.1",
		"node-fetch": "^2.7.0",
		"svelte-i18n": "^4.0.0"
	},
	"devDependencies": {
		"@sveltejs/adapter-static": "2.0.1",
		"@sveltejs/kit": "^1.30.3",
		"@types/jquery": "^3.5.29",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"concurrently": "^7.6.0",
		"cross-env": "^7.0.3",
		"dotenv": "^16.0.3",
		"electron": "^30.0.1",
		"electron-builder": "^24.9.1",
		"electron-connect": "^0.6.3",
		"electron-packager": "^17.1.1",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-svelte3": "^4.0.0",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"sass": "^1.60.0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"svelte-preprocess": "^5.0.3",
		"tslib": "^2.5.0",
		"typescript": "^4.9.4",
		"vite": "^4.0.4",
		"xml-js": "^1.6.11"
	},
	"overrides": {
		"electron": {
			"got": "^12.5.1"
		}
	}
}
